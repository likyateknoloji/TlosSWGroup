<?xml version="1.0" encoding="UTF-8"?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd"
	version="2.1">

	<application>
		<locale-config>
			<default-locale>tr_TR</default-locale>
			<supported-locale>en</supported-locale>
			<supported-locale>de</supported-locale>
			<supported-locale>fr</supported-locale>
		</locale-config>
		<resource-bundle>
			<!-- base-name>com.likya.tlossw.web.resources.messages</base-name-->
			<base-name>com.likya.tlossw.web.appmng.UTF8ResourceBundle</base-name>
			<var>msgs</var>
		</resource-bundle>
	</application>

	<lifecycle>
		<phase-listener>com.likya.tlossw.web.logging.PhaseLogListener</phase-listener>
	</lifecycle>

</faces-config>
